/**app.wxss**/
page {
  display: block;
  min-height: 100%;
  background-color: #3B3B3B;
}
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #3B3B3B;
} 
.item-box{
  z-index: 99;
  position: relative;
  width: 100%;
}
.item-cover{
  position: absolute;
  left: 30rpx;
  top: 90rpx;
  width: 200rpx;
  height: 280rpx;
  background: #ffffff;
  box-shadow: 0 3rpx 3rpx #4B4B4B;
  border-radius: 16rpx;
}
.item-top{
  box-sizing: border-box;
  padding-left: 260rpx;
  padding-right: 30rpx;
  padding-bottom:10rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
  height: 200rpx;
  display:table-cell;
  vertical-align:bottom;
}
.item-bottom{
  box-sizing: border-box;
  padding: 10rpx 30rpx 10rpx 260rpx;
  width: 100%;
  height: 200rpx;
  background: #ffffff;
}
.item-title{
  color: #ffffff;
  width: 100%;
  line-height: 1.3;
  font-size: 28rpx;
}
.item-tip{
  font-size: 22rpx;
  width: 100%;
  line-height: 1;
  padding: 10rpx 0;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}